{% set u_data = app.session.get('user')%}
<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width,initial-scale=1">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
                <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
                <link rel="shortcut icon" href="{{ asset('img/icons/icon-48x48.png') }}" />
                <link rel="stylesheet" href="{{ asset('css/app.css') }}" />
                <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap" rel="stylesheet">
        {% endblock %}

    </head>
    <body>
        <div id="app">
            <div class="wrapper">
                {% include 'nav.html.twig' %}
                <div class="main">
                    <Navbar u_id="{{ u_data['id'] }}" f_name="{{ u_data['prenom'] }}" l_name="{{ u_data['nom'] }}"   avatar="{{ u_data['avatar'] }}"></Navbar>
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
            <script src="{{ asset('js/javascript.js') }}"></script>
            <script src="{{ asset('js/javascript-1.js') }}"></script>
            <script src="{{ asset('js/javascript-2.js') }}"></script>
            
            <script src="{{ asset('js/javascript-4.js') }}"></script>
            <script src="{{ asset('js/javascript-5.js') }}"></script>
        {% endblock %}
    </body>
</html>
